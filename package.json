{
  "name": "propresenterwords",
  "version": "2.4.2",
  "description": "Extract and export worship song lyrics from ProPresenter 7 playlists as text, JSON, or PowerPoint. Cross-platform CLI with standalone executables for macOS and Windows.",
  "main": "dist-electron/main/index.js",
  "bin": {
    "propresenter-lyrics": "dist/cli.js"
  },
  "scripts": {
    "start": "ts-node src/cli.ts",
    "dev": "ts-node src/cli.ts",
    "build": "tsc",
    "build:exe": "npm run build && mkdir -p executables && pkg dist/cli.js --output executables/propresenter-lyrics --targets node18-win-x64,node18-macos-x64,node18-macos-arm64 --assets logo.png --options max-old-space-size=4096",
    "build:macos": "scripts/build-macos-app.sh",
    "build:macos:dmg": "scripts/create-dmg.sh",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build",
    "electron:package": "npm run electron:build && electron-builder",
    "web:dev:server": "ts-node src/server/index.ts",
    "web:dev:ui": "vite --config vite.config.web.ts",
    "web:build": "tsc && vite build --config vite.config.web.ts",
    "web:build:ui": "vite build --config vite.config.web.ts",
    "web:start": "node dist/server/index.js",
    "release:bundle": "npm run build:exe && npm run build:macos && npm run build:macos:dmg && npm run electron:package"
  },
  "keywords": [
    "propresenter",
    "lyrics",
    "worship"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.6",
    "electron-store": "^8.2.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "fuse.js": "^7.1.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-parse": "^2.4.5",
    "pptxgenjs": "^3.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "renewedvision-propresenter": "^7.7.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.0"
  }
}
